package coffeemachine;

import java.io.File;
import javax.sound.sampled.*;

public class Sound {
    private AudioInputStream ais;
    private Clip test;
    public Sound() {
        try{
        ais = AudioSystem.getAudioInputStream(new File("Coffee.wav"));
        test = AudioSystem.getClip();
        }catch(Exception ex){
            ex.printStackTrace();
        }
       
}
    public void playSound(){       
        try{
            test.open(ais);
            test.start();

            while (!test.isRunning())
                Thread.sleep(5);
            while (test.isRunning())
                Thread.sleep(5);

            test.close();
        }catch(Exception ex){
            ex.printStackTrace();
        }
    }
}
